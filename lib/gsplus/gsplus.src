        //  * @description     
        //  * @param {opt:number} amount - The amount to add.
        //  * @return {number | null on type error} - The result of the subtraction.
        //  * @example
        //  * newNumber = 44
        //  * @example
        //  * @example
        //  * result = newNumber.minus(2);
        //  * @example
        //  * print(result); // Outputs: 42
        //  * @example
        //  *     
    number.minus = function(amount = 1)
        if not typeof(amount) == "number" then return null
            return self - amount
    end function
    //@name diff
        //  *
        //  * @uml
        //  * @startuml
        //  * entity NumberObject
        //  * control ".diff" as diff
        //  * NumberObject -> diff : <i>[2]</i>number(44)
        //  * diff -> NumberObject : number[42]     
        //  * footer
        //  * string.diff
        //  * endfooter         
        //  * @enduml   
        // ANCHOR number.diff  
        //  * @description     
        //  * Return Difference from provided integer to distanceTo
        //  * @param {number} amount
        //  * @return {number | null on type error} - The result of the subtraction.
        //  * @example
        //  * newNumber = 44;
        //  * newNumber2 = 2;            
        //  * @example
        //  * @example
        //  * result = newNumber.diff(newNumber2);
        //  * @example
        //  * print(result); // Outputs: 42
        //  * @example
        //  *           
    number.diff = function(distanceTo = 0)
        if not typeof(distanceTo) == "number" then return null
            return abs(self - distanceTo)
    end function

    //@name greater_than   
        //  *
        //  * @uml
        //  * @startuml
        //  * entity NumberObject
        //  * control ".greater_than" as greater_than
        //  * NumberObject -> greater_than : number
        //  * greater_than -> NumberObject : [true / false]     
        //  * footer
        //  * string.greater_than
        //  * endfooter         
        //  * @enduml 
        // ANCHOR number.greater_than    
        //  * @description
        //  * Check if number is greater than provided number
        //  * @param {number} isGreater
        //  * @return {bool number | null on type error} - The result of the subtraction.
        //  * @example
        //  * myNumber = 42;
        //  * myNumber2 = 100;
        //  * @example
        //  * @example
        //  * result = newNumber.greater_than(myNumber2);
        //  * @example
        //  * print(result); // Outputs: 0
        //  * @example
        //  *      
    number.greater_than = function(isGreater)
        if not typeof(isGreater) == "number" then return null
            if isGreater > self then return true
            return false
    end function

    //@name lesser_than   
        //  *
        //  * @uml
        //  * @startuml
        //  * entity NumberObject
        //  * control ".lesser_than" as lesser_than
        //  * NumberObject -> lesser_than : number
        //  * lesser_than -> NumberObject : [true / false]     
        //  * footer
        //  * string.lesser_than
        //  * endfooter         
        //  * @enduml 
        // ANCHOR number.lesser_than  
        //  * @description  
        //  * Check if number is lesser than provided number   
        //  * @param {number} amount
        //  * @return {bool number | null on type error} - The result of the subtraction.
        //  * @example
        //  * myNumber = 42;
        //  * myNumber2 = 100;
        //  * @example
        //  * @example
        //  * result = newNumber.lesser_than(myNumber2);
        //  * @example
        //  * print(result); // Outputs: 1
        //  * @example
        //  *              
    number.lesser_than = function(isLesser)
        if not typeof(isLesser) == "number" then return null
            if isLesser < self then return true
            return false
    end function

    //@name random_from
        //  *
        //  * @uml
        //  * @startuml
        //  * entity NumberObject
        //  * control ".random_from" as random_from
        //  * NumberObject -> random_from : number
        //  * random_from -> NumberObject : [random number in range]     
        //  * footer
        //  * string.random_from([opt:min])
        //  * endfooter         
        //  * @enduml        
        // ANCHOR number.random_from
        //  * @description  
        //  * Generate a random number from 1 to number opt: min   
        //  * @param {number} amount
        //  * @return {bool number | string on type error} - The result of the subtraction.
        //  * @example
        //  * myNumber = 100;
        //  * @example
        //  * @example
        //  * result = myNumber.random_from(50);
        //  * @example
        //  * print(result); // Outputs: {rnd:50-100}
        //  * @example
        //  *    
    number.random_from = function(min = 0)
        if not typeof(min) == "number" then return null
            max = self
            return floor((rnd * (max - min + 1)) + min)  
    end function

//LIST FUNCTIONS
//.trim removes zero length list items at start and end
list.trim = function()
	while not self[self.len - 1].len > 0
        self.remove(self.len - 1)
    end while
	while not self[0].len > 0
        self.remove(0)
    end while
	return self
end function

//.contains return index of search value if found or null
list.contains = function(searchValue = null)
    locals.searchVals = self.values
    locals.index = 0
    for val in locals.searchVals
        if val == searchValue then
            return locals.index
        end if
        locals.index = locals.index + 1
    end for
    return null
end function